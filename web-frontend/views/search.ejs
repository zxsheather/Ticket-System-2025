<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>搜索结果 - 火车票系统</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container mt-4">
        <!-- 搜索条件显示 -->
        <% if (searchParams && (searchParams.from || searchParams.to)) { %>
        <div class="card mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h5 class="mb-0">
                            <i class="fas fa-search text-primary"></i>
                            <% if (searchParams.from && searchParams.to) { %>
                                从 <strong><%= searchParams.from %></strong> 到 <strong><%= searchParams.to %></strong>
                                <% if (searchParams.date) { %>
                                    | 日期: <strong><%= searchParams.date %></strong>
                                <% } %>
                            <% } else { %>
                                搜索车票
                            <% } %>
                        </h5>
                    </div>
                    <div class="col-md-4 text-end">
                        <button class="btn btn-outline-primary" onclick="showModifySearch()">
                            <i class="fas fa-edit"></i> 修改搜索
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- 搜索结果 -->
        <div class="row">
            <div class="col-12">
                <!-- 如果没有搜索参数，显示搜索表单 -->
                <% if (!searchParams.from && !searchParams.to) { %>
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-search"></i> 车票查询
                        </h5>
                    </div>
                    <div class="card-body">
                        <form action="/search" method="GET">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label for="searchFrom" class="form-label">出发站</label>
                                    <input type="text" class="form-control" id="searchFrom" name="from" 
                                           placeholder="请输入出发站" required>
                                </div>
                                <div class="col-md-4">
                                    <label for="searchTo" class="form-label">到达站</label>
                                    <input type="text" class="form-control" id="searchTo" name="to" 
                                           placeholder="请输入到达站" required>
                                </div>
                                <div class="col-md-4">
                                    <label for="searchDate" class="form-label">出发日期</label>
                                    <input type="text" class="form-control" id="searchDate" name="date" 
                                           placeholder="MM-DD (如: 06-15)" pattern="\d{2}-\d{2}" 
                                           title="请输入MM-DD格式的日期，如: 06-15">
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-search"></i> 搜索车票
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <% } %>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-circle"></i> <%= error %>
                    </div>
                <% } %>

                <% if (trains && trains.length > 0) { %>
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-train"></i> 找到 <%= trains.length %> 趟列车
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>车次</th>
                                            <th>出发站</th>
                                            <th>到达站</th>
                                            <th>出发时间</th>
                                            <th>到达时间</th>
                                            <th>旅行时间</th>
                                            <th>票价</th>
                                            <th>余票</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% trains.forEach(function(train) { %>
                                            <tr>
                                                <td>
                                                    <strong class="text-primary"><%= train.trainID %></strong>
                                                </td>
                                                <td><%= train.from %></td>
                                                <td><%= train.to %></td>
                                                <td>
                                                    <i class="fas fa-clock text-muted"></i>
                                                    <%= train.startTime %>
                                                </td>
                                                <td>
                                                    <i class="fas fa-clock text-muted"></i>
                                                    <%= train.arrivalTime %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">
                                                        <%= train.duration || '计算中' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong class="text-success">¥<%= train.price %></strong>
                                                </td>
                                                <td>
                                                    <% if (train.seat > 0) { %>
                                                        <span class="badge bg-success"><%= train.seat %> 张</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">已售罄</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (train.seat > 0) { %>
                                                        <% if (user) { %>
                                                            <button class="btn btn-primary btn-sm" 
                                                                    onclick="buyTicket('<%= train.trainID %>', '<%= train.from %>', '<%= train.to %>', '<%= train.startTime %>', '<%= train.price %>')">
                                                                <i class="fas fa-shopping-cart"></i> 购票
                                                            </button>
                                                        <% } else { %>
                                                            <a href="/login" class="btn btn-outline-primary btn-sm">
                                                                <i class="fas fa-sign-in-alt"></i> 登录购票
                                                            </a>
                                                        <% } %>
                                                    <% } else { %>
                                                        <button class="btn btn-secondary btn-sm" disabled>
                                                            <i class="fas fa-ban"></i> 无票
                                                        </button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-search fa-5x text-muted"></i>
                        </div>
                        <h3 class="text-muted">未找到符合条件的列车</h3>
                        <p class="text-muted mb-4">请尝试修改搜索条件或选择其他日期</p>
                        <button class="btn btn-primary" onclick="showModifySearch()">
                            <i class="fas fa-edit"></i> 修改搜索条件
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- 修改搜索模态框 -->
    <div class="modal fade" id="modifySearchModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-edit text-primary"></i> 修改搜索条件
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/search" method="GET">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="from" class="form-label">出发站</label>
                            <input type="text" class="form-control" id="from" name="from" 
                                   value="<%= searchParams ? searchParams.from : '' %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="to" class="form-label">到达站</label>
                            <input type="text" class="form-control" id="to" name="to" 
                                   value="<%= searchParams ? searchParams.to : '' %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="date" class="form-label">出发日期</label>
                            <input type="text" class="form-control" id="date" name="date" 
                                   value="<%= searchParams ? searchParams.date : '' %>" 
                                   placeholder="MM-DD (如: 06-15)" pattern="\d{2}-\d{2}"
                                   title="请输入MM-DD格式的日期，如: 06-15">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> 搜索
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- 购票模态框 -->
    <div class="modal fade" id="buyTicketModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-ticket-alt text-success"></i> 购买车票
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="buyTicketForm">
                    <div class="modal-body">
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6>车票信息</h6>
                                <p class="mb-1"><strong>车次:</strong> <span id="ticketTrainID"></span></p>
                                <p class="mb-1"><strong>从:</strong> <span id="ticketFrom"></span> <strong>到:</strong> <span id="ticketTo"></span></p>
                                <p class="mb-1"><strong>出发时间:</strong> <span id="ticketTime"></span></p>
                                <p class="mb-0"><strong>票价:</strong> ¥<span id="ticketPrice"></span></p>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="num" class="form-label">购票数量</label>
                            <input type="number" class="form-control" id="num" name="num" 
                                   value="1" min="1" max="10" required>
                        </div>
                        <input type="hidden" id="hiddenTrainID" name="trainID">
                        <input type="hidden" id="hiddenFrom" name="from">
                        <input type="hidden" id="hiddenTo" name="to">
                        <input type="hidden" id="hiddenDate" name="date">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-credit-card"></i> 确认购买
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/search.js"></script>
</body>
</html>

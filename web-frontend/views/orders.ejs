<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>我的订单 - 火车票系统</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-list-alt"></i> 我的订单
                        </h4>
                    </div>
                    <div class="card-body">
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-circle"></i> <%= error %>
                            </div>
                        <% } %>

                        <% if (orders && orders.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>订单时间</th>
                                            <th>车次</th>
                                            <th>出发站</th>
                                            <th>到达站</th>
                                            <th>出发时间</th>
                                            <th>票数</th>
                                            <th>总价</th>
                                            <th>状态</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(function(order, index) { %>
                                            <tr>
                                                <td>
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar"></i>
                                                        <%= order.timestamp || '未知' %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <strong class="text-primary"><%= order.trainID %></strong>
                                                </td>
                                                <td><%= order.from %></td>
                                                <td><%= order.to %></td>
                                                <td>
                                                    <i class="fas fa-clock text-muted"></i>
                                                    <%= order.date %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info"><%= order.num %> 张</span>
                                                </td>
                                                <td>
                                                    <strong class="text-success">¥<%= order.price * order.num %></strong>
                                                </td>
                                                <td>
                                                    <% if (order.status === 'success') { %>
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-check"></i> 购票成功
                                                        </span>
                                                    <% } else if (order.status === 'refunded') { %>
                                                        <span class="badge bg-warning">
                                                            <i class="fas fa-undo"></i> 已退票
                                                        </span>
                                                    <% } else if (order.status === 'pending') { %>
                                                        <span class="badge bg-info">
                                                            <i class="fas fa-clock"></i> 处理中
                                                        </span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">
                                                            <i class="fas fa-question"></i> 未知
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (order.status === 'success') { %>
                                                        <button class="btn btn-danger btn-sm" 
                                                                onclick="refundTicket('<%= order.trainID %>', '<%= order.from %>', '<%= order.to %>', '<%= order.date %>', '<%= order.num %>')">
                                                            <i class="fas fa-undo"></i> 退票
                                                        </button>
                                                    <% } else if (order.status === 'refunded') { %>
                                                        <span class="text-muted">
                                                            <i class="fas fa-check"></i> 已退票
                                                        </span>
                                                    <% } else { %>
                                                        <span class="text-muted">-</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- 统计信息 -->
                            <div class="row mt-4">
                                <div class="col-md-3">
                                    <div class="card bg-primary text-white">
                                        <div class="card-body text-center">
                                            <h5><i class="fas fa-list"></i></h5>
                                            <h3><%= orders.length %></h3>
                                            <p class="mb-0">总订单数</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-success text-white">
                                        <div class="card-body text-center">
                                            <h5><i class="fas fa-check"></i></h5>
                                            <h3><%= orders.filter(o => o.status === 'success').length %></h3>
                                            <p class="mb-0">成功订单</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-warning text-white">
                                        <div class="card-body text-center">
                                            <h5><i class="fas fa-undo"></i></h5>
                                            <h3><%= orders.filter(o => o.status === 'refunded').length %></h3>
                                            <p class="mb-0">已退票</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-info text-white">
                                        <div class="card-body text-center">
                                            <h5><i class="fas fa-money-bill"></i></h5>
                                            <h3>¥<%= orders.filter(o => o.status === 'success').reduce((sum, o) => sum + (o.price * o.num), 0) %></h3>
                                            <p class="mb-0">总消费</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <div class="mb-4">
                                    <i class="fas fa-shopping-cart fa-5x text-muted"></i>
                                </div>
                                <h3 class="text-muted">暂无订单记录</h3>
                                <p class="text-muted mb-4">您还没有购买过任何车票</p>
                                <a href="/" class="btn btn-primary">
                                    <i class="fas fa-search"></i> 立即搜索车票
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 退票确认模态框 -->
    <div class="modal fade" id="refundModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-undo text-warning"></i> 退票确认
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>注意：</strong> 退票操作不可撤销，请确认您要退票。
                    </div>
                    <div class="card bg-light">
                        <div class="card-body">
                            <h6>退票信息</h6>
                            <p class="mb-1"><strong>车次:</strong> <span id="refundTrainID"></span></p>
                            <p class="mb-1"><strong>从:</strong> <span id="refundFrom"></span> <strong>到:</strong> <span id="refundTo"></span></p>
                            <p class="mb-1"><strong>出发时间:</strong> <span id="refundDate"></span></p>
                            <p class="mb-0"><strong>退票数量:</strong> <span id="refundNum"></span> 张</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-danger" onclick="confirmRefund()">
                        <i class="fas fa-undo"></i> 确认退票
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/orders.js"></script>
</body>
</html>
